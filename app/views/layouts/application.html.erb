<!DOCTYPE html>
<html>
<head>
  <title>Cartstash</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="container-fluid">
	<div class="container row centered-container">
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle cs-menu-icon" data-toggle="collapse" data-target="#menu-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar cs-menu-icon-bar"></span>
                        <span class="icon-bar cs-menu-icon-bar"></span>
                        <span class="icon-bar cs-menu-icon-bar"></span>
                    </button>
                    <div class="navbar-toggle pull-left cs-m-logo">
                      <%= link_to image_tag("images/cs-white-orange-logo.png", alt:  "CartStash Logo"), root_path%>
                    </div>
                </div>

                <div class="collapse navbar-collapse" id="menu-collapse-1">
                  <div class="cs-logo pull-left">
                    <%= link_to image_tag("images/cs-white-orange-logo.png", alt: "CartStash Logo"), root_path%>
                  </div>
                  <ul class="nav navbar-nav cs-header-menu">
                        <li><%=link_to 'Food Items', root_path%></li>
                        <li><%=link_to 'Non-Food Items', root_path%></li>
                        <li><%=link_to 'Babies', root_path%></li>
                        <li><%=link_to 'Pets', root_path%></li>
                        <li><%=link_to 'Appliances', root_path%></li>
                  </ul>
                  <button class="login-btn pull-right"></button>
                </div>
			</div>
		</nav>
	</div>
<!-- Flash message area -->
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<!-- Main Content Area -->
<%= yield %>

<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container">
  </div>
</nav>
</body>
</html>
