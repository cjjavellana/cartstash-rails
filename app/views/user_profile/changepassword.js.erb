// write response to DOM
$('.modal-holder').html('');
$('.modal-holder').html("<%= escape_javascript render(partial: 'user_profile/changepassword').html_safe %>");

//check if success message is present
var hasFlashArea = $('.flash').length > 0
if(hasFlashArea) {
    //reload browser when success message is present
    window.location.href = '/user_profile'
} else {
    //re-open modal when there are error messages
    $('.change-password-dialog').modal('toggle');
}


