<div class="modal fade" role="dialog" aria-labelledby="gridSystemModalLabel" id="ajaxLoginFormModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content ajax-login-form">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modalTitle">Welcome Back!</h4>
      </div>
      <div class="modal-body">
        <%= form_tag user_session_path, method: :post, format: :json do %>
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-6 col-xs-12">
                  <div class="row">
                    <div class="col-md-12 col-xs-12">
                      <div class="form-group">
                        <%= email_field_tag 'user[email]', nil, class: 'form-control', placeholder: 'Email Address' %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 col-xs-12">
                      <div class="form-group">
                        <%= password_field_tag 'user[password]', nil, class: 'form-control', placeholder: 'Password', autocomplete: 'off' %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 col-xs-12">
                      <div class="form-group">
                        <div class="checkbox">
                          <label>
                            <%= check_box_tag 'user[remember_me]', '1', class: 'checkbox' %> Remember me
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 col-xs-12">
                      <div class="form-group">
                        <%= button_tag 'Sign In', type: 'button',class: 'ajax-signin-btn' %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-md-6 col-xs-12">
                  <div class="login-or-label">- OR - </div>
                  <div class="social-login">
                    <%= link_to image_tag('images/facebook-login-button.png', alt:  "Facebook Login"), omniauth_authorize_path('user', :facebook) %>
                  </div>
                  <div class="social-login">
                    <%= link_to image_tag('images/login-twitter.png', alt:  "Twitter Login"), omniauth_authorize_path('user', :twitter) %>
                  </div>
                </div>
              </div>
        <% end %>
        </div>

      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div><!-- /.modal -->