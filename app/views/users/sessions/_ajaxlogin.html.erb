<div class="modal fade" role="dialog" aria-labelledby="gridSystemModalLabel" id="ajaxLoginFormModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content ajax-login-form">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modalTitle">Welcome Back!</h4>
      </div>
      <div class="modal-body">
        <%= form_tag user_session_path, remote: true, method: :post, data: {type: 'json'} do %>
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-6 col-xs-12">
                  <div class="form-group">
                    <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Email Address' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 col-xs-12">
                  <div class="form-group">
                    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', autocomplete: 'off' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="checkbox">
                  <label>
                    <%= check_box_tag :remember_me, 'rememberme', class: 'checkbox' %> Remember me
                  </label>
                </div>
              </div>
        <% end %>
        </div>

      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div><!-- /.modal -->